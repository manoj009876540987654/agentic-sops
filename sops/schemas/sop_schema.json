{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["error_key", "risk", "description", "plan"],
  "properties": {
    "error_key": {"type": "string"},
    "risk": {"type": "string", "enum": ["low", "medium", "high"]},
    "description": {"type": "string"},
    "plan": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["cmd"],
        "properties": {
          "cmd": {"type": "string"}
        }
      }
    }
  }
}
